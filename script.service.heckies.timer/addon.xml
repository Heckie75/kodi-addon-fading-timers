<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.service.heckies.timers" name="Heckies Timers"
	version="1.0.0" provider-name="Heckie">
	<requires>
		<import addon="xbmc.python" version="2.25.0" />
		<import addon="xmbc.addon" version="16.0.0" />
	</requires>
	<extension point="xbmc.service" library="timer.py" start="login" />
	<extension point="kodi.context.item">
		<menu id="kodi.core.main">
			<menu>
				<label>Timers...</label>
				<item library="timer0.py">
					<label>Sleep timer</label>
					<visible>true</visible>
				</item>
				<item library="timer1.py">
					<label>Snooze timer</label>
					<visible>true</visible>
				</item>
				<item library="timer2.py">
					<label>Timer 1</label>
					<visible>true</visible>
				</item>
				<item library="timer3.py">
					<label>Timer 2</label>
					<visible>true</visible>
				</item>
				<item library="timer4.py">
					<label>Timer 3</label>
					<visible>true</visible>
				</item>
				<item library="timer5.py">
					<label>Timer 4</label>
					<visible>true</visible>
				</item>
                                <item library="timer6.py">
                                        <label>Timer 5</label>
                                        <visible>true</visible>
                                </item>
                        </menu>
                 </menu>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_gb">Heckie's timer</summary>
		<description lang="en_gb"></description>
		<disclaimer lang="en_gb"></disclaimer>
		<language></language>
		<platform>all</platform>
		<license></license>
		<forum></forum>
		<website>https://github.com/Heckie75/kodi-addon-heckies-timer</website>
		<email>github@heckie.de</email>
		<source></source>
		<news></news>
		<assets>
			<icon>icon.png</icon>
			<screenshot>resources/assets/screen1.png</screenshot>
			<screenshot>resources/assets/screen2.png</screenshot>
			<screenshot>resources/assets/screen3.png</screenshot>
			<screenshot>resources/assets/screen4.png</screenshot>	
		</assets>
	</extension>
</addon>
